<!-- Contact Section -->
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Request a Quote</h2>
                <h3 class="section-subheading">
                    <span class="sw-contact-subtext">Send us a message and we will get back to you to discuss how we can tailer sit&work to your needs.</span>
                </h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <%#= form_for @leed, {url: root_path, html: {id:"contactForm", name:"sentMessage", novalidate:true}} do |leed| %>
                    <div class="row">
                            <div class="col-md-6">
                                <!-- Name -->
                                <div class="form-group">
                                    <%#= leed.text_field :name, class: "form-control", placeholder: "Your name *", required:true, minlength:2, :data => {validation_required_message: 'Please enter your name.' }  %>
                                    <p class="help-block text-danger"></p>
                                </div>
                                <!-- Email -->
                                <div class="form-group">
                                    <%#= leed.email_field :email, class: "form-control", placeholder: "Your email *", required:true, :data => {validation_required_message: 'Please enter your email address.' } %>
                                    <p class="help-block text-danger"></p>
                                </div>
                                <!-- Phone -->
                                <div class="form-group">
                                    <%#= leed.telephone_field :phone, class: "form-control", placeholder: "Your phone *", required:true, minlength:6, :data => {validation_required_message: 'Please enter your phone number.' } %>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>

                            <!-- Message -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%#= leed.text_area :message, class: "form-control", placeholder: "Your message *", required:true, minlength:10, :data => {validation_required_message: 'Please enter a message.' } %>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <!-- Submit -->
                            <div class="col-lg-12 text-center">
                                <div id="success">
                                    <!-- If there's an error -->
                                    <%= render 'shared/error_messages' %>
                                    <!-- If submit successful -->
                                    <% flash.each do |message_type, message| %>
                                        <div class="alert alert-<%= message_type %>"><%= message %>
                                            <button type='button' class='close' data-dismiss='alert' aria-hidden='true'>&times;</button>
                                        </div>
                                    <% end %>
                                </div>
                                <%= button_tag "Send Message", class: "btn btn-xl" %>
                            </div>

                    </div>
                <%# end %>
            </div>
        </div>
    </div>
</section>
